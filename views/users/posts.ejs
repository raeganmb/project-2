<!DOCTYPE html>
<html>
  <head>
    <title>User Post</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="header">
      <img src="/images/logo.jpeg" class="header-img" />
      <div class="header-right">
        <a href="/create">Create Post</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
    <div class="box">
      <h2>WET YOUR PLANTS</h2>
    </div>
    <div>
      <table id="list">
        <thead>
          <tr>
            <th>Title</th>
            <th>Question</th>
            <!-- <th>User</th> -->
          </tr>
        </thead>
        <tbody>
          <% posts.forEach(function(p) { %>
          <tr>
            <td><%= p.title %></td>
            <td><%= p.question %></td>
            <!-- <td><%= p._id %></td> -->
            <td>
              <a class="a2" href="/show/<%=p.id%>">See Post</a>
            </td>
            <td>
              <form class="a2" action="/posts/<%=p.id%>?_method=DELETE" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" name="_method" value="DELETE">
            </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </body>
</html>
